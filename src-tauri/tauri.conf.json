{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/tauri-v2.0.0/crates/tauri-config-schema/schema.json",
  "productName": "CutBoard",
  "version": "0.1.0",
  "identifier": "cutboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CutBoard",
        "width": 960,
        "height": 640,
        "minWidth": 720,
        "minHeight": 480,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": {
      "../language/*": "language/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "languages": [
          "SimpChinese",
          "TradChinese",
          "English",
          "Japanese",
          "Korean",
          "French",
          "German",
          "Spanish",
          "Portuguese",
          "Russian",
          "Arabic",
          "Thai",
          "Vietnamese",
          "Italian",
          "Dutch",
          "Polish",
          "Turkish",
          "Ukrainian",
          "Indonesian"
        ],
        "displayLanguageSelector": true
      }
    }
  }
}
